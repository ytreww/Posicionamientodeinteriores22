<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.compu20171.diegoclase.labsistemacomp.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/labcomp"
        android:layout_marginTop="35dp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Laboratorio de LSC"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textTres" />


    <TextView
        android:id="@+id/textUno"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="52dp"
        android:background="@android:color/background_light"
        android:text="LAB E"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />

    <TextView
        android:id="@+id/textDos"
        android:layout_width="121dp"
        android:layout_height="87dp"
        android:layout_alignTop="@+id/textUno"
        android:layout_marginLeft="115dp"
        android:background="@android:color/background_light"
        android:text="LAB D"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />

    <TextView
        android:id="@+id/textTres"
        android:layout_width="138dp"
        android:layout_height="87dp"
        android:layout_alignTop="@+id/textDos"
        android:layout_marginLeft="240dp"
        android:background="@android:color/background_light"
        android:text="LAB C"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />


    <TextView
        android:id="@+id/textCuatro"
        android:layout_width="140dp"
        android:layout_height="115dp"
        android:layout_alignStart="@+id/textTres"
        android:layout_below="@+id/textCinco"
        android:background="@android:color/background_light"
        android:text="LAB A"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title" />

    <TextView
        android:id="@+id/textCinco"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textTres"
        android:layout_marginTop="36dp"
        android:text="LAB B"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
        tools:background="@android:color/background_light" />

</RelativeLayout>